<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imgSpecLogo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_alert_item"
            android:contentDescription="@string/empty"
            android:padding="@dimen/margin_medium"
            android:src="@drawable/img_spec_logo" />

        <ImageView
            android:id="@+id/imgMasterLogo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_alert_item"
            android:contentDescription="@string/empty"
            android:padding="@dimen/margin_medium"
            android:src="@drawable/img_master_logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imgAgentLogo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_alert_item"
            android:contentDescription="@string/empty"
            android:padding="@dimen/margin_medium"
            android:src="@drawable/img_agent_logo" />

        <ImageView
            android:id="@+id/imgAutoDeskLogo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_alert_item"
            android:contentDescription="@string/empty"
            android:padding="@dimen/margin_medium"
            android:src="@drawable/img_autodesk_logo" />
    </LinearLayout>

</RelativeLayout>