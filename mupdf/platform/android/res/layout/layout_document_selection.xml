<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_medium"
        android:background="@color/bg_list_info_and_contents"
        android:orientation="vertical"
        android:padding="@dimen/margin_medium" >

        <TextView
            android:id="@+id/tvCatalog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_document_selection"
            android:drawablePadding="@dimen/margin_medium"
            android:drawableTop="@drawable/ic_pdf_file"
            android:gravity="center"
            android:padding="@dimen/margin_medium"
            android:text="@string/catalog_and_data_sheet"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/tvLeedLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvCatalog"
            android:background="@drawable/bg_document_selection"
            android:drawablePadding="@dimen/margin_medium"
            android:drawableTop="@drawable/ic_web"
            android:gravity="center"
            android:padding="@dimen/margin_medium"
            android:text="@string/leed_link"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_medium" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imgCloseLibrary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:contentDescription="@string/empty"
        android:src="@drawable/btn_close_state" />

</FrameLayout>